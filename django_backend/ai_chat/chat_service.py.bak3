    def clean_ai_response(self, text: str) -> str:
        """æ¸…ç†AIå›å¤ä¸­çš„HTMLæ ‡ç­¾å’Œmarkdownæ ¼å¼"""
        import re
        
        # ç§»é™¤HTMLæ ‡ç­¾
        text = re.sub(r'<[^>]+>', '', text)
        
        # ç§»é™¤markdownä»£ç å—
        text = re.sub(r'```[^`]*```', '', text)
        text = re.sub(r'`[^`]*`', '', text)
        
        # ç§»é™¤å¤šä½™çš„ç©ºç™½è¡Œ
        text = re.sub(r'\n\s*\n\s*\n', '\n\n', text)
        
        # æ¸…ç†å¼€å¤´å’Œç»“å°¾çš„ç©ºç™½
        text = text.strip()
        
        return text
    

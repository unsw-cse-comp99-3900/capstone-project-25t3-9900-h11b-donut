    def is_explain_plan_request(self, message: str) -> bool:
        """æ£€æµ‹æ˜¯å¦æ˜¯è§£é‡Šå­¦ä¹ è®¡åˆ’çš„è¯·æ±‚"""
        explain_patterns = [
            r'explain.*plan',
